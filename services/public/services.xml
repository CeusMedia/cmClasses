<?xml version="1.0" encoding="utf-8"?>
<servicePoint>
  <title>CeuS Media: Public Net Services</title>
  <description>
    <![CDATA[
      <h4>Welcome to the public CeuS Media Services.</h4>
      These services are for training and testing and can change every time.<br/>
      <em><small>Click on the cog for testing a service.</small></em><br/><br/>
    ]]>
  </description>
  <url/>
  <syntax>?service={service}(&amp;format={format}[&amp;{parameter}={value}])</syntax>
  <services>

    <service name="addIntegers" class="Services_Public" format="json">
      <description>Adds two Integers.</description>
      <format>json</format>
      <format>php</format>
      <format>txt</format>
      <format>wddx</format>
      <format>xml</format>
      <parameter type="int" mandatory="yes" preg="/^[0-9]+$/" title="first integer">a</parameter>
      <parameter type="int" mandatory="yes" preg="/^[0-9]+$/" title="second integer">b</parameter>
    </service>

    <service name="getBlogArticlesFeed" class="Services_Public" format="atom">
      <description>...</description>
      <format>atom</format>
<!--      <format>rss</format>-->
    </service>

    <service name="getBlogCommentsFeed" class="Services_Public" format="atom">
      <description>...</description>
      <format>atom</format>
<!--      <format>rss</format>-->
    </service>

    <service name="getForumFeed" class="Services_Public" format="rss">
      <description>...</description>
      <format>rss</format>
    </service>

    <service name="getTestException" class="Services_Public" format="xml">
      <description>Returns Exception for testing.</description>
      <format>json</format>
      <format>php</format>
      <format>txt</format>
      <format>wddx</format>
      <format>xml</format>
      <parameter type="bool" mandatory="no" title="Flag: throw Exception, otherwise respond encoded Exception">throw</parameter>
    </service>

    <service name="getTimestamp" class="Services_Public" format="json">
      <description>Returns current Timestamp on Server.</description>
      <format>json</format>
      <format>php</format>
      <format>txt</format>
      <format>wddx</format>
      <format>xml</format>
      <parameter mandatory="no" preg="@^([a-z_ .:-]+)?$@i" title="PHP Date Format, see http://www.php.net/date">output</parameter>
    </service>

    <service name="reflectInput" class="Services_Public" format="txt">
      <description>Returns current Timestamp on Server.</description>
      <format>json</format>
      <format>php</format>
      <format>txt</format>
      <format>wddx</format>
      <format>xml</format>
      <parameter mandatory="yes" title="String to be reflected by Server, HTML allowed, JavaScript not allowed.">input</parameter>
    </service>

  </services>
</servicePoint>




